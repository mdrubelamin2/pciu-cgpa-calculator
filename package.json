{
  "name": "pciu-cgpa-calculator",
  "version": "0.1.0",
  "private": true,
  "description": "Port City International University Result & CGPA Calculator as a Next.js PWA with Turbopack and React Compiler.",
  "scripts": {
    "dev": "bun --bun next dev --turbopack",
    "build": "bun --bun next build --turbopack",
    "postbuild": "bun run generate-sw",
    "generate-sw": "workbox generateSW workbox-config.js",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "lint:fix": "bun --bun next lint --fix"
  },
  "dependencies": {
    "@designcise/next-theme-toggle": "^4.0.0",
    "@formkit/auto-animate": "^0.8.2",
    "@next/third-parties": "^15.3.3",
    "@react-input/mask": "^2.0.4",
    "chart.js": "^4.4.4",
    "jotai": "^2.9.3",
    "large-small-dynamic-viewport-units-polyfill": "^0.1.1",
    "lru-cache": "^11.1.0",
    "next": "15.3.3",
    "node-html-parser": "^7.0.1",
    "react": "19.1.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "19.1.0",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.3.3",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "chokidar": "^4.0.3",
    "eslint": "9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "prettier": "^3.5.3",
    "workbox-cli": "^7.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
